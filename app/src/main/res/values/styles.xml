<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="main_bottom_menu">
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="main_bottom_menu_tab" parent="main_bottom_menu">
        <item name="android:button">@null</item><!--去掉RadioButton前面的圆点-->
        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item><!--当宽度不够显示时的省略号显示方式，marquee表示跑马灯显示-->
        <item name="android:background">#66FFFFFF</item><!--设置Tab背景图-->
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:drawablePadding">2.0dip</item>
        <item name="android:layout_marginTop">4.0dip</item>
        <item name="android:layout_marginBottom">2.0dip</item>
    </style>

    <style name="main_bottom_menu_tab_selected" parent="main_bottom_menu_tab">
        <item name="android:background">#61388A13</item>
    </style>
    <style name="main_bottom_menu_tab_unselected" parent="main_bottom_menu_tab"/>

</resources>
